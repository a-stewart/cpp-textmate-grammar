{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Extension",
            "type": "extensionHost",
            "request": "launch",
            "args": ["--extensionDevelopmentPath=${workspaceRoot}"],
            "preLaunchTask": "build"
        },
        {
            "name": "Launch & Build Open File",
            "type": "extensionHost",
            "request": "launch",
            "args": ["--extensionDevelopmentPath=${workspaceRoot}"],
            "preLaunchTask": "build_active_file"
        }
    ]
}
